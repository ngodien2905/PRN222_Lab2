@page
@model GameHubSearch.Pages.Shared.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="mb-3">Login</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post" class="card p-3" autocomplete="off">
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary flex-fill">Sign in</button>
        <a asp-page="/Shared/Register" class="btn btn-secondary flex-fill">Register</a>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}