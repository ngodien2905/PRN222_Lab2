@page
@model GameHubSearch.Pages.Shared.GamePage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Game.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Game.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Game.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Game.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Game.ReleaseDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Game.ReleaseDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Game.Category)</dt>
        <dd class="col-sm-10">@((Model.Game.Category?.CategoryName) ?? "—")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Game.Developer)</dt>
        <dd class="col-sm-10">@((Model.Game.Developer?.DeveloperName) ?? "—")</dd>
    </dl>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Game.GameId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Back to List</a>
    </form>
</div>
